{{- if and (eq .chezmoi.os "linux") -}}
#!/bin/bash

#
# Installs packages once chezmoi setup is over
#

_isInstalled() {
    package="$1"
    {{ if (eq .chezmoi.osRelease.idLike "debian") }}
    check="$(sudo dpkg -s "${package}")"
    {{ else if (eq .chezmoi.osRelease.idLike "arch") }}
    check="$(sudo paru -Qs "${package}")";
    {{ end }}
    if [ -n "${check}" ] ; then
        echo 0; 
        return;
    fi;
    echo 1;
    return;
}

_installMany() {
    # The packages that are not installed will be added to this array
    toInstall=();

    for pkg; do
        # If package is installed, skip it
        if [[ $(_isInstalled "${pkg}") == 0 ]]; then
            echo "${pkg} is already installed.";
            continue;
        fi;

        # Otherwise, ask user if they want to add it to the list of packages
        read -p "Add ${pkg}?" -n 1 -r
        if [[ $REPLY =~ ^[Yy]$ ]]; then
            toInstall+=("${pkg}");
        fi;
        printf "\n";

    done;

    # If package array is empty, don't do anything and stop the function
    if [[ "${toInstall[@]}" == "" ]] ; then
        echo "All packages are already installed.";
        return;
    fi;

    # Install all package added to array
    printf "Packages not installed:\n%s\n" "${toInstall[@]}";
    {{ if (eq .chezmoi.osRelease.idLike "debian") }}
    sudo apt install "${toInstall[@]}";
    {{ else if (eq .chezmoi.osRelease.idLike "arch") }}
    paru -S "${toInstall[@]}";
    {{ end }}
}

_addPPA() {
    grep -h "^deb.*$1" /etc/apt/sources.list.d/* >/dev/null 2>&1
    if [[ $? -ne 0 ]]; then
        echo "Adding ppa:$1";
        sudo add-apt-repository -y ppa:$1;
        sudo apt update;
        return 0;
    fi;
    return 1;
}

_exists() {
    if [[ $? -ne 0 ]]; then 
        if ! command -v $1 >/dev/null 2>&1; then
            return 1;
        fi;
    else
        return 2;
    fi;
    return 0;
}

_chsh() {
    if [[ $? -ne 0 ]]; then
        if [[ "$(echo '$SHELL' | grep $1)" ]] ; then 
           return 1;
        else
            sudo chsh -s "$(command -v $1)" "USER"
        fi;
    fi;
    return 0;
}

        

{{ if (eq .chezmoi.osRelease.idLike "arch") }}
# Assumes we are running sway 

# Checks if paru has been installed
if [[ "$(_exists 'paru')" -ne 0 ]] ; then
    sudo pacman -S --needed base-devel
    git clone https://aur.archlinux.org/paru.git ~
    cd paru
    makepkg -si
fi;

packages=("sway" "fish" "neovim-nightly-bin" "nnn" "starship", "git-delta-bin", "rustup");
{{ else if (eq .chezmoi.osRelease.idLike "debian") }}
{{ if (eq .chezmoi.osRelease.id "ubuntu") }}
if [[ "$(_exists 'starship')" -ne 0 ]]; then
    curl -fsSL https://starship.rs/install.sh | bash
fi
_installMany "software-properties-common" >/dev/null 2>&1
_addPPA "neovim-ppa/unstable"
_addPPA "fish-shell/release-3"
{{ end }}
packages=("fish" "neovim" "python3-neovim" "nnn" "build-essential");
{{ end }}
_installMany "${packages[@]}";

if [[ "$(_exists 'rustup')" -ne 0 ]]; then
    curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh
fi

# Set fish as default shell
_chsh "fish" >/dev/null 2>&1

{{ end }}
