{{ $fullName := "Omar Zeghouani" -}}
{{ $email := promptString  "email" -}}
{{ $isLaptop := promptBool "laptop" }}
{{ $isWsl := or (env "WSL_DISTRO_NAME") (env "WSLENV") | not | not -}}
{{ $isWayland := and (eq .chezmoi.os "linux") (promptBool "wayland") }}
{{ $isX11 := not $isWayland }}
{{ $pager := or (lookPath "delta") "less -FRSX" }}
{{ $editor := or (lookPath "nvim") "vi" }}
[diff]
  format = "git"
  pager = "{{ $pager }}"

[merge]
  command = "{{ $editor }}"
  args = "-d"

[data]
  name = "{{ $fullName }}"
  email = "{{ $email }}"
  pager = "{{ $pager }}"
  editor = "{{ (base $editor) }}"
  is_wsl = {{ $isWsl }}
  is_x11 = {{ $isX11 }}
  is_wayland = {{ $isWayland }}
  is_laptop = {{ $isLaptop }}
