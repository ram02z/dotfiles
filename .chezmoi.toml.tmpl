{{- $rbw := lookPath "rbw" -}}
{{- if or (not $rbw) (output $rbw "unlocked") -}}
{{- fail "rbw not found, bootstrapping will fail.\n" -}}
{{- end -}}
{{- $gpg := lookPath "gpg" -}}
{{- if (not $gpg) -}}
{{- fail "gpg not found, bootstrapping will fail.\n" -}}
{{- end -}}
{{- $fullName := "Omar Zeghouani" -}}
{{- $email := promptString  "email" -}}
{{- $gpgKey := output "rbw" "get" (cat $email "GPG short ID") | trim -}}
{{- $sshPublicKey := output "rbw" "get" (cat $email "SSH public key") | trim -}}
{{- $sshPrivateKey := output "rbw" "get" (cat $email "SSH private key") | trim -}}
{{- $gitPager := or (lookPath "delta") "less -FRSX" -}}
{{- $editor := or (lookPath "nvim") "vi" -}}
{{- $isWsl := or (env "WSL_DISTRO_NAME") (env "WSLENV") | not | not -}}
{{- $isWayland := and (and (eq .chezmoi.os "linux") (not $isWsl)) (promptBool "wayland") -}}
{{- $isX11 := and (not $isWsl) (not $isWayland) -}}
{{- $isLaptop := and (eq .chezmoi.os "linux") (not (not (stat "/proc/acpi/button/lid"))) -}}

[diff]
  format = "git"
  pager = {{ $gitPager | quote }}

[merge]
  command = {{ (base $editor) | quote }}
  args = "-d"

[secret]
  command = {{ $rbw | quote }}

[data]
  name = {{ $fullName | quote }}
  email = {{ $email | quote }}
  gpg_key = {{ $gpgKey | trim | quote }}
  ssh_public_key = {{ $sshPublicKey | trim | quote }}
  ssh_private_key = {{ $sshPrivateKey | quote }}
  git_pager = {{ $gitPager | quote }}
  editor = {{ (base $editor) | quote }}
  is_laptop = {{ $isLaptop }}
  is_wsl = {{ $isWsl }}
  is_x11 = {{ $isX11 }}
  is_wayland = {{ $isWayland }}
