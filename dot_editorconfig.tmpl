# My editorconfig
# mostly borrowed from RehanSaeed/EditorConfig

root = true

# All files
[*]
charset = utf-8
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
{{- if (eq .chezmoi.os "linux") }}
end_of_line = lf
{{- else if (eq .chezmoi.os "darwin") }}
end_of_line = cr
{{- else if (eq .chezmoi.os "windows") }}
end_of_line = crlf
{{- end }}


# C, C++
[*.{c,cpp}]
max_line_length = 80

# Batch Files
[*.{cmd,bat}]
end_of_line = crlf

# Shell Files
[*.{sh,zsh,fish}]
end_of_line = lf

# Makefiles
[Makefile]
indent_style = tab

# JSON Files
[*.{json,json5,webmanifest}]
indent_size = 2

# YAML/TOML Files
[*.{yml,yaml,toml}]
indent_size = 2

# XML Configuration Files
[*.{xml,config,props,targets,nuspec,resx,ruleset,vsixmanifest,vsct}]
indent_size = 2

# Markdown and Neorg Files
[*.{md,norg}]
max_line_length = 80
trim_trailing_whitespace = false

# Web Files
[*.{htm,html,js,jsm,ts,tsx,css,sass,scss,less,svg,vue}]
indent_size = 2

# Vim/Lua
[*.{vim,lua}]
indent_style=space
indent_size=2
max_line_length = 120

# Golang
[*.go]
indent_style=tab

# Python
[*.py]
indent_size = 4

{{ if eq .chezmoi.osRelease.id "void" -}}
[**/srcpkgs/*/template]
indent_style=tab
tab_width=4
indent_size=4
charset=utf-8
trim_trailing_whitespace=true
insert_final_newline=true
end_of_line=lf
max_line_length=80
{{- end }}
