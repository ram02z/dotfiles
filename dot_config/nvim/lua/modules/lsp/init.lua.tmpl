  filetypes = { "go", "gomod", "gotmpl", "chezmoitmpl" },
  settings = {
    gopls = {
      staticcheck = true,
      semanticTokens = true,
      analyses = {
        nilness = true,
        unusedparams = true,
        unusedvariable = true,
        unusedwrite = true,
        useany = true,
        fieldalignment = true,
        ST1000 = true,
        ST1003 = true,
        ST1020 = true,
        ST1022 = true,
      },
    },
  },
},
{{- $servers = add1 $servers -}}
{{- end }}
