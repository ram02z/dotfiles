clangd = {
  filetypes = { "c", "cpp" },
  server = {
    cmd = {
      "clangd", "--background-index", "--pch-storage=memory",
      "--clang-tidy", "--enable-config", "--header-insertion=iwyu"
    },
  },
},
{{- $servers = add1 $servers -}}
{{ else if lookPath "ccls" -}}
ccls = {},
{{- $servers = add1 $servers -}}
