[theme]
name = "dracula"

[icons]
name = "material-nf"

[[block]]
block = "music"
buttons = ["prev", "play", "next"]
marquee = false
dynamic_width = true
separator = " "
interface_name_exclude = ["firefox"]
{{ if lookPath "ncspot" -}}
on_click = "~/.local/bin/i3-quickterm spotify"
on_collapsed_click = "~/.local/bin/i3-quickterm spotify"
{{- end }}

{{ if (eq (get .chezmoi.osRelease "idLike") "debian") -}}
[[block]]
block = "apt"
interval = 1800
format_singular="{count:1}"
format = "{count:1}"
critical_updates_regex = "(linux |linux-lts|linux-zen)"
on_click = "APT_CONFIG=/tmp/i3rs-apt/apt.conf apt list --upgradable | tail -n +2 | cut -f1 -d '/' | rofi -dmenu"
{{ else if (eq .chezmoi.osRelease.id "void") -}}
[[block]]
block = "custom"
command = "xbps-install -Mun | tee /tmp/xbps-updates | grep '' -c"
interval = "once"
on_click = "cat /tmp/xbps-updates | rofi -dmenu"
{{- end }}

