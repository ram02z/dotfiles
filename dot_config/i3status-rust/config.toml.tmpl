{{ if lookPath "rofication-json" }}
[[block]]
block = "custom"
command = ''' rofication-json '''
interval = 5
on_click = "rofication-gui"
hide_when_empty = true
json = true
{{ end }}

{{ if .is_laptop }}
[[block]]
block = "battery"
format = "{percentage:2}"
on_click = "~/.local/bin/i3-quickterm battery"
{{ end }}

[[block]]
block = "time"
interval = 1
format = "%R"
on_click = "pkill rofi || ~/.local/bin/rofi-calendar"
icons_format = " "

